        "inherits": "UwpRelease",
        "hidden": false,
        "architecture": "ARM64",
        "binaryDir": "${sourceDir}/build/cmake/UWP_ARM64_Release"
      },
      {
        "name": "Win32Releasex64",
        "description": "Release build for Win32 x64",
        "hidden": false,
        "binaryDir": "${sourceDir}/build/cmake/Win32_x64_Release",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
        }
      },
      {
        "name": "Win32Debugx64",
        "description": "Debug build for Win32 x64",
        "hidden": false,
        "binaryDir": "${sourceDir}/build/cmake/Win32_x64_Debug",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "Linux",
        "description": "Build for Linux",
        "hidden": true,
        "cacheVariables": {
          "CMAKE_SYSTEM_NAME": "Linux",
          "CMAKE_C_COMPILER": "clang",
          "CMAKE_CXX_COMPILER": "clang++"
        },
        "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
        }
      },
      {
        "name": "LinuxReleasex64",
        "description": "Release build for Linux x64",
        "hidden": false,
        "inherits": "Linux",
        "binaryDir": "${sourceDir}/build/cmake/Linux_x64_Release",
