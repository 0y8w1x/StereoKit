        { "name":"AndroidArm64Release", "configuration":"Release", "configurePreset":"AndroidArm64Release", "jobs":24  },
        { "name":"LinuxDebugx64", "configuration":"Debug", "configurePreset":"LinuxDebugx64", "jobs":24  },
        { "name":"LinuxReleasex64", "configuration":"Release", "configurePreset":"LinuxReleasex64", "jobs":24  },
        { "name":"LinuxDebugArm64", "configuration":"Debug", "configurePreset":"LinuxDebugArm64", "jobs":24  },
        { "name":"LinuxReleaseArm64", "configuration":"Release", "configurePreset":"LinuxReleaseArm64", "jobs":24  }
