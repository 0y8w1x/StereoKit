{
    "version": 6,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 10,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "Uwp",
        "description": "Build for UWP",
        "hidden": true,
        "generator": "Visual Studio 17 2022",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_SYSTEM_NAME": "WindowsStore",
          "CMAKE_SYSTEM_VERSION": "10.0",
          "DYNAMIC_LOADER": "ON",
          "CMAKE_CXX_FLAGS": "/MP"
        },
        "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
        }
      },
      {
        "name": "UwpDebug",
        "description": "Debug build for UWP x64",
        "inherits": "Uwp",
        "hidden": true,
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "UwpDebugx64",
        "description": "Debug build for UWP x64",
        "inherits": "UwpDebug",
        "hidden": false,
        "architecture": "x64",
        "binaryDir": "${sourceDir}/build/cmake/UWP_x64_Debug"
      },
      {
        "name": "UwpDebugx86",
        "description": "Debug build for UWP x86",
        "inherits": "UwpDebug",
        "hidden": false,
        "architecture": "Win32",
        "binaryDir": "${sourceDir}/build/cmake/UWP_x86_Debug"
      },
      {
        "name": "UwpDebugArm32",
        "description": "Debug build for UWP ARM32",
        "inherits": "UwpDebug",
        "hidden": false,
        "architecture": "ARM",
        "binaryDir": "${sourceDir}/build/cmake/UWP_ARM_Debug"
      },
      {
        "name": "UwpDebugArm64",
        "description": "Debug build for UWP ARM64",
        "inherits": "UwpDebug",
        "hidden": false,
        "architecture": "ARM64",
        "binaryDir": "${sourceDir}/build/cmake/UWP_ARM64_Debug"
      },
      {
        "name": "UwpRelease",
        "description": "Release build for UWP x64",
        "inherits": "Uwp",
        "hidden": true,
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
        }
      },
      {
        "name": "UwpReleasex64",
        "description": "Release build for UWP x64",
        "inherits": "UwpRelease",
        "hidden": false,
        "architecture": "x64",
        "binaryDir": "${sourceDir}/build/cmake/UWP_x64_Release"
      },
      {
        "name": "UwpReleasex86",
        "description": "Release build for UWP x86",
        "inherits": "UwpRelease",
        "hidden": false,
        "architecture": "Win32",
        "binaryDir": "${sourceDir}/build/cmake/UWP_x86_Release"
      },
      {
        "name": "UwpReleaseArm32",
        "description": "Release build for UWP ARM32",
        "inherits": "UwpRelease",
        "hidden": false,
        "architecture": "ARM",
        "binaryDir": "${sourceDir}/build/cmake/UWP_ARM_Release"
