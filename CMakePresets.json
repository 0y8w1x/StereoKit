      {
        "name": "Android",
        "description": "Build for Android",
        "hidden": true,
        "generator": "Ninja",
        "cacheVariables": {
          "CMAKE_SYSTEM_NAME": "Android",
          "CMAKE_TOOLCHAIN_FILE":"$env{NDK}/build/cmake/android.toolchain.cmake",
          "ANDROID_PLATFORM":"android-29",
          "CMAKE_SYSTEM_VERSION": "29",
          "DYNAMIC_LOADER": "ON",
          "SK_DYNAMIC_OPENXR": "ON"
        }
      },
      {
        "name": "AndroidArm64Debug",
        "description": "Debug build for Android ARM64",
        "inherits": "Android",
        "hidden": false,
        "binaryDir": "${sourceDir}/build/cmake/Android_ARM64_Debug",
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug",
            "ANDROID_ABI": "arm64-v8a",
            "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
            "SK_DYNAMIC_OPENXR": "ON"
        }
      },
      {
        "name": "AndroidArm64Release",
        "description": "Release build for Android ARM64",
        "inherits": "Android",
        "hidden": false,
        "binaryDir": "${sourceDir}/build/cmake/Android_ARM64_Release",
