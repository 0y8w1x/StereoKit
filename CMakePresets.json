            "CMAKE_BUILD_TYPE": "Release",
            "ANDROID_ABI": "arm64-v8a",
            "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
            "SK_DYNAMIC_OPENXR": "ON"
        }
      }
    ],
    "buildPresets": [
        { "name":"UwpDebugx64", "configuration":"Debug", "configurePreset":"UwpDebugx64", "jobs":24  },
