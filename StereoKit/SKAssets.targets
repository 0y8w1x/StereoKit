<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<ItemGroup Condition="'$(SKCopyAssets)' == 'True'">
		<None Remove="$(SKAssetFolder)/**"/>
		<Content Condition="'$(SKBuildPlatform)'!='Android' and '$(UseMaui)'!='true'" Include="$(SKAssetFolder)/**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>$(SKAssetDestination)/%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>
		<AndroidAsset Condition="'$(SKBuildPlatform)'=='Android'" Include="$(SKAssetFolder)/**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
		</AndroidAsset>
	</ItemGroup>

</Project>