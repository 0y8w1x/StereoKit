<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<SKAssetFolder      Condition="'$(SKAssetFolder)'      == ''">Assets</SKAssetFolder>
		<SKAssetDestination Condition="'$(SKAssetDestination)' == ''">$(SKAssetFolder)</SKAssetDestination>
		<SKCopyAssets       Condition="'$(SKCopyAssets)'       == ''">True</SKCopyAssets>
	</PropertyGroup>
	
	<ItemGroup Condition="'$(SKCopyAssets)' == 'True'">
		<None Remove="$(SKAssetFolder)/**"/>
		<Content Condition="'$(TargetFrameworkIdentifier)'!='MonoAndroid'" Include="$(SKAssetFolder)/**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>$(SKAssetDestination)/%(RecursiveDir)%(Filename)%(Extension)</Link>
		</Content>
		<AndroidAsset Condition="'$(TargetFrameworkIdentifier)'=='MonoAndroid'" Include="$(SKAssetFolder)/**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
		</AndroidAsset>
	</ItemGroup>
	
</Project>